<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Archetype Created Web Application</display-name>

    <!-- 验证码servlet -->
    <servlet>
        <servlet-name>CaptchaServlet</servlet-name>
        <servlet-class>com.wf.captcha.servlet.CaptchaServlet</servlet-class>
    </servlet>

    <!--登录loginServlet-->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>dream.web.LoginServlet</servlet-class>
    </servlet>

    <!--注册logonServlet-->
    <servlet>
        <servlet-name>LogonServlet</servlet-name>
        <servlet-class>dream.web.LogonServlet</servlet-class>
    </servlet>

    <!--页面从数据库获取信息-->
    <servlet>
        <servlet-name>GetInfoServlet</servlet-name>
        <servlet-class>dream.web.GetInfoServlet</servlet-class>
    </servlet>

    <!--页面从数据库操作信息-->
    <servlet>
        <servlet-name>OperateInfoServlet</servlet-name>
        <servlet-class>dream.web.OperateInfoServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CaptchaServlet</servlet-name>
        <url-pattern>/captcha</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/loginServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>LogonServlet</servlet-name>
        <url-pattern>/logonServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>GetInfoServlet</servlet-name>
        <url-pattern>/getInfoServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>OperateInfoServlet</servlet-name>
        <url-pattern>/operateInfoServlet</url-pattern>
    </servlet-mapping>

</web-app>
